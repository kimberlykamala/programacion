#include "stdafx.h"
#include "conio.h"
#include <iostream>
using namespace std;

int FAC(int x);

void main ()
{
	int dat,z;
	int j,t;
	cout<<"Ingrese el numero de veces que quiere repetir: ";
	cin>>j;
	for (t=1;t<=j;t++)
	{

	cout<<"\nIngrese el valor del numero: ";
	cin>>dat;
	z=FAC(dat);
	cout<<"El factorial de: "<<dat<<" es: "<<z;
	}
	getch ();
}
int FAC(int x)
{
	int m=1;
	for (int i=2;i<=x;i++)
		m=m*i;
	return m;
}
